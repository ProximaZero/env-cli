{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "sourceRoot": "src/",
        "target": "es2017",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@prozero/env-cli": [
                "src"
            ],
            "@prozero/env-cli/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "services/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}